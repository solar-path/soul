{
  "name": "adam",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run --watch src/api/api.ts\" \"vite\"",
    "dev:client": "vite",
    "dev:api": "bun run --watch src/api/api.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "postinstall": "flowbite-react patch",
    "drizzle": "bunx drizzle-kit generate && bun run src/api/database/migrate.ts",
    "seed": "bun run src/api/database/seed/seed.ts",
    "drop": "bun run src/api/database/drop.ts",
    "db:reset": "bun drop && bun drizzle && bun seed"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@hookform/resolvers": "^5.0.1",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@react-email/components": "^0.0.36",
    "@tailwindcss/vite": "^4.1.4",
    "@tanstack/react-query": "^5.74.3",
    "@tanstack/react-router": "^1.116.0",
    "@tanstack/react-store": "0.7.0",
    "@types/bun": "^1.2.9",
    "concurrently": "^9.1.2",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.1",
    "flowbite-react": "^0.11.7",
    "hono": "^4.7.7",
    "nodemailer": "^6.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.1.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@tanstack/react-query-devtools": "^5.74.3",
    "@tanstack/react-router-devtools": "^1.116.0",
    "@tanstack/router-plugin": "^1.116.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.0"
  }
}
