  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run --watch src/api/api.ts\" \"vite\"",
    "dev:client": "vite",
    "dev:api": "bun run --watch src/api/api.ts",
    "build": "tsc -b && vite build",
