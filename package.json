    "@tailwindcss/vite": "^4.0.17",
    "@tanstack/react-query": "^5.71.1",
    "@tanstack/react-router": "^1.114.29",
    "@types/bun": "^1.2.8",
    "concurrently": "^9.1.2",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.7.1",
    "flowbite-react": "^0.11.5",
    "hono": "^4.7.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "tailwindcss": "^4.0.17",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
